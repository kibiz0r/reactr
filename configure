#!/usr/bin/env ruby

def sh(cmd)
  puts cmd
  raise "Command failed: #{cmd}" unless system cmd
end

if Dir.exists? 'vendor/bundle'
  sh 'bundle update'
else
  sh 'gem install bundler -v 1.2.0'
  sh 'gem install rake -v 0.9.2.2'
  sh 'bundle install --binstubs=vendor/bin --path=vendor/bundle'
end

puts 'Good to go!'
